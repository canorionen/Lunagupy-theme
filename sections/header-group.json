nt-size:clamp(1.05rem, 2.4vw + .6rem, 1.8rem);\n    min-width:2.4ch; text-align:center; letter-spacing:.4px;\n    background:rgba(255,255,255,.18);\n    padding:.18rem .38rem; border-radius:.4rem;\n    box-shadow:inset 0 0 0 1px rgba(255,255,255,.15);\n    transition:transform .15s ease;\n  }\n  .cdhms__lbl{ font-size:.78rem; opacity:.95; font-weight:600; margin-bottom:.1rem; }\n  .cdhms__sep{ opacity:.55; margin:0 .1rem .2rem; font-weight:700; }\n\n  \/* Pop animation on change *\/\n  @keyframes cdhms-pop {\n    0% { transform:scale(1); text-shadow:none; }\n    30%{ transform:scale(1.12); text-shadow:0 0 .25rem rgba(255,255,255,.45); }\n    100%{ transform:scale(1); text-shadow:none; }\n  }\n  .cdhms__num.is-changed{ animation: cdhms-pop .45s ease; }\n\n  .cdhms__cta{\n    background:#fff; color:var(--accent); text-decoration:none; font-weight:900;\n    padding:.42rem .85rem; border-radius:.35rem; line-height:1; white-space:nowrap;\n    box-shadow:0 0 0 2px #fff inset;\n  }\n  .cdhms__cta:focus{ outline:2px solid #fff; outline-offset:2px; }\n\n  @media (max-width:480px){\n    .c-compact-dhms{ font-size:.9rem; padding:.4rem .6rem; gap:.5rem; }\n  }\n\n  \/* Mobil menÃ¼ AÃ‡IKKEN banner'Ä± menÃ¼ Ã§ekmecesinin ALTINDA tut *\/\n  @media (max-width: 989px){\n    body:has(#Details-menu-drawer-container[open]) .c-compact-dhms.is-sticky{\n      z-index: 0 !important;\n    }\n  }\n<\/style>\n\n<script>\n(function(){\n  var bars = document.querySelectorAll('.c-compact-dhms');\n  if(!bars.length) return;\n\n  function pad2(n){ return String(n).padStart(2,'0'); }\n  function bump(elm){ elm.classList.remove('is-changed'); void elm.offsetWidth; elm.classList.add('is-changed'); }\n  function setNum(elm, val){\n    var next = pad2(val);\n    if (elm.textContent !== next){ elm.textContent = next; bump(elm); }\n  }\n\n  \/\/ Header\/announcement bar altÄ±na gerÃ§ek ZAMANSAL (gÃ¶rÃ¼nen) hizalama\n  function makeSticky(el){\n    var ghost = document.createElement('div');\n    ghost.className = 'cdhms__ghost';\n    el.insertAdjacentElement('afterend', ghost);\n\n    \/\/ Aday header\/announcement elemanlarÄ±\n    var headerCandidates = Array.from(document.querySelectorAll(\n      'header, #shopify-section-header, .shopify-section-header, .header-wrapper, .site-header, .announcement-bar, [data-header], [data-section-type=\"header\"]'\n    ));\n\n    function computeVisualTop(){\n      var bottoms = headerCandidates\n        .filter(Boolean)\n        .map(function(h){ return h.getBoundingClientRect().bottom || 0; })\n        .filter(function(v){ return Number.isFinite(v); });\n\n      var topPx = 0;\n      if (bottoms.length){\n        topPx = Math.max.apply(null, bottoms);\n      } else {\n        topPx = ghost.getBoundingClientRect().top || 0;\n      }\n      el.style.setProperty('--sticky-top', topPx + 'px');\n      var h = el.getBoundingClientRect().height;\n      if (ghost.style.height !== h + 'px') ghost.style.height = h + 'px';\n    }\n\n    \/\/ Sticky modunu baÅŸlat\n    el.classList.add('is-sticky');\n    computeVisualTop();\n    setTimeout(computeVisualTop, 0);\n    setTimeout(computeVisualTop, 200);\n    setTimeout(computeVisualTop, 800);\n    setTimeout(computeVisualTop, 1600);\n\n    \/\/ Scroll\/resize'da rAF ile gÃ¼ncelle\n    var ticking = false;\n    function onScroll(){\n      if (!ticking){\n        ticking = true;\n        requestAnimationFrame(function(){ computeVisualTop(); ticking = false; });\n      }\n    }\n    window.addEventListener('scroll', onScroll, { passive:true });\n    window.addEventListener('resize', computeVisualTop);\n\n    \/\/ Header yÃ¼kseklik ve sÄ±nÄ±f deÄŸiÅŸimlerini izle\n    if (window.ResizeObserver){\n      headerCandidates.forEach(function(h){\n        try{ new ResizeObserver(computeVisualTop).observe(h); }catch(e){}\n      });\n    }\n    if (window.MutationObserver){\n      var mo = new MutationObserver(computeVisualTop);\n      headerCandidates.forEach(function(h){\n        try{ mo.observe(h, { attributes:true, attributeFilter:['class','style'] }); }catch(e){}\n      });\n    }\n\n    \/\/ ========================================================================\n    \/\/ GÃœNCELLEME v3: Mobil menÃ¼ aÃ§Ä±ldÄ±ÄŸÄ±nda z-index'i yÃ¶net\n    \/\/ ========================================================================\n    \/\/ Orijinal z-index deÄŸerini CSS deÄŸiÅŸkeninden oku (varsayÄ±lan 8)\n    var originalZ = getComputedStyle(el).getPropertyValue('--z') || '8';\n\n    \/\/ Mobil menÃ¼ aÃ§Ä±kken body\/html\/header etiketine eklenen yaygÄ±n sÄ±nÄ±f adlarÄ±\n    var menuOpenClasses = [\n      'mobile-menu-open', 'menu-open', 'nav-open', 'js-menu-open', \n      'overflow-hidden', 'overflow-hidden-mobile', 'js-drawer-open',\n      'drawer-open', 'js-menu--is-open', 'menu--is-open', \n      'mobile-nav-open', 'nav--open', 'noscroll', 'modal-open',\n      \/\/ Header'Ä±n kendisine eklenen sÄ±nÄ±flar\n      'header--is-open', 'site-header--is-open', 'header-is-open', 'is-open', 'is-active'\n    ];\n\n    function checkMenuZIndex(){\n      var isMenuOpen = menuOpenClasses.some(function(cls){\n        \/\/ <html>, <body>, ve tÃ¼m header adaylarÄ±nÄ± kontrol et\n        if (document.body.classList.contains(cls)) return true;\n        if (document.documentElement.classList.contains(cls)) return true;\n        return headerCandidates.some(function(header) {\n            return header && header.classList.contains(cls);\n        });\n      });\n\n      if (!isMenuOpen) {\n           try {\n               var allHeaderClasses = headerCandidates.reduce(function(acc, header) {\n                  return acc.concat(Array.from(header ? header.classList : []));\n               }, Array.from(document.body.classList).concat(Array.from(document.documentElement.classList)));\n               \n               isMenuOpen = allHeaderClasses.some(function(cls) {\n                  var c = cls.toLowerCase();\n                  return c.includes('menu-open') || c.includes('nav-open') || c.includes('drawer-open');\n               });\n           } catch(e) { }\n      }\n      \n      if (isMenuOpen){\n        el.style.setProperty('--z', '0'); \n      } else {\n        el.style.setProperty('--z', originalZ);\n      }\n    }\n    \n    \/\/ Body, Html ve Header'lardaki class deÄŸiÅŸikliklerini izle\n    if (window.MutationObserver){\n      var menuObserver = new MutationObserver(checkMenuZIndex);\n      var config = { attributes: true, attributeFilter: ['class'], subtree: false };\n      \n      try { menuObserver.observe(document.documentElement, config); } catch(e) {}\n      try { menuObserver.observe(document.body, config); } catch(e) {}\n      \n      headerCandidates.forEach(function(h) {\n          if (h) {\n              try {\n                  menuObserver.observe(h, config);\n              } catch (e) {}\n          }\n      });\n      \n      checkMenuZIndex();\n      setTimeout(checkMenuZIndex, 500);\n      setTimeout(checkMenuZIndex, 1500);\n\n    } else {\n        setInterval(checkMenuZIndex, 500);\n    }\n\n  } \/\/ makeSticky sonu\n\n  bars.forEach(function(el){\n    var deadlineStr = el.getAttribute('data-deadline');\n    var deadline = new Date(deadlineStr);\n\n    var dn = el.querySelector('.cdhms__d'),\n        hn = el.querySelector('.cdhms__h'),\n        mn = el.querySelector('.cdhms__m'),\n        sn = el.querySelector('.cdhms__s'),\n        cta = el.querySelector('.cdhms__cta');\n\n    \/\/ CTA\n    var ctaHref = el.getAttribute('data-cta-href') || '#';\n    var ctaText = el.getAttribute('data-cta-text') || 'Sepete Ekle %30 Ä°ndirimi Yakala';\n    cta.setAttribute('href', ctaHref);\n    cta.textContent = ctaText;\n\n    function tick(){\n      if (isNaN(deadline.getTime())){\n        dn.textContent = hn.textContent = mn.textContent = sn.textContent = '--';\n        if (cta) cta.style.display = 'none';\n        return;\n      }\n      var now = new Date();\n      var diff = deadline - now;\n\n      if (diff <= 0){\n        dn.textContent = hn.textContent = mn.textContent = sn.textContent = '00';\n        if (cta) cta.style.display = 'none';\n        el.setAttribute('aria-label','SÃ¼re doldu');\n        return;\n      }\n\n      var total = Math.floor(diff\/1000);\n      var days  = Math.floor(total\/86400); total %= 86400;\n      var hours = Math.floor(total\/3600);  total %= 3600;\n      var mins  = Math.floor(total\/60);\n      var secs  = total % 60;\n\n      setNum(dn, days);\n      setNum(hn, hours);\n      setNum(mn, mins);\n      setNum(sn, secs);\n    }\n\n    tick();\n    setInterval(tick, 1000);\n\n    makeSticky(el);\n  });\n})();\n<\/script>","color_scheme":"","section_width":"page-width","padding-block-start":0,"padding-block-end":0}}},"order":["header_announcements_jRRW7T","header_section","custom_liquid_r44FEk"]}